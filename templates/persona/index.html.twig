{% extends 'base.html.twig' %}

{% block title %}Persona index{% endblock %}

{% block body %}
    <h1>Persona index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Libros</th>
                <th>Adeudo</th>
                <th>NumPersona</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for persona in personas %}
            <tr>
                <td>{{ persona.id }}</td>
                <td>{{ persona.tipo }}</td>
                <td>{{ persona.nombre }}</td>
                <td>{{ persona.correo }}</td>
                <td>{{ persona.telefono }}</td>
                <td>{{ persona.libros }}</td>
                <td>{{ persona.adeudo }}</td>
                <td>{{ persona.numPersona }}</td>
                <td>
                    <a href="{{ path('persona_show', {'id': persona.id}) }}">show</a>
                    <a href="{{ path('persona_edit', {'id': persona.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('persona_new') }}">Create new</a>
{% endblock %}

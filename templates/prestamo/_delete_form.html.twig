<form method="post" action="{{ path('prestamo_delete', {'id': prestamo.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ prestamo.id) }}">
    <button class="btn">Delete</button>
</form>

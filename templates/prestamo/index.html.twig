{% extends 'base.html.twig' %}

{% block title %}Prestamo index{% endblock %}

{% block body %}
    <h1>Prestamo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prestamo</th>
                <th>Entregado</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prestamo in prestamos %}
            <tr>
                <td>{{ prestamo.id }}</td>
                <td>{{ prestamo.prestamo }}</td>
                <td>{{ prestamo.entregado ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('prestamo_show', {'id': prestamo.id}) }}">show</a>
                    <a href="{{ path('prestamo_edit', {'id': prestamo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('prestamo_new') }}">Create new</a>
{% endblock %}
